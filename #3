def modify_list():
    A = list(map(int, input("Введіть елементи списку через пробіл: ").split()))
    print("Початковий список:", A)

    # Перевірка, щоб список мав достатню довжину
    if len(A) < 2:
        print("Список занадто короткий для видалення!")
        return A

    # Видалення другого (індекс 1) і передостаннього (індекс -2) елементів
    del A[1]
    if len(A) > 1:  # вдруг залишився коротший після видалення другого
        del A[-2]

    print("Змінений список:", A)
    return A

modify_list()
